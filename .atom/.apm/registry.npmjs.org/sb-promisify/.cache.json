sum":"781e0f77e1c50103d61d624a837d5ab8c2cd7341","tarball":"https://registry.npmjs.org/sb-promisify/-/sb-promisify-1.2.0.tgz"},"maintainers":[{"name":"steelbrain","email":"de.steelbrain@gmail.com"}],"_npmOperationalInternal":{"host":"packages-16-east.internal.npmjs.com","tmp":"tmp/sb-promisify-1.2.0.tgz_1458999894895_0.979292755946517"},"directories":{}},"1.3.0":{"name":"sb-promisify","version":"1.3.0","description":"Node module for simple promisification","main":"lib/index.js","scripts":{"test":"apm test","compile":"ucompiler go"},"repository":{"type":"git","url":"git+https://github.com/steelbrain/promisify.git"},"keywords":["promisify","es6","promise"],"author":{"name":"steelbrain"},"license":"MIT","bugs":{"url":"https://github.com/steelbrain/promisify/issues"},"homepage":"https://github.com/steelbrain/promisify#readme","devDependencies":{"babel-preset-steelbrain":"^2.0.1","ucompiler":"^3.1.8","ucompiler-plugin-babel":"^3.1.1"},"gitHead":"25876f6b5e15edb9e44ddc97dde789025aedc5a8","_id":"sb-promisify@1.3.0","_shasum":"3af6f1fa9ffc833f14de86916eefc1f559b1b051","_from":".","_npmVersion":"3.7.3","_nodeVersion":"5.9.0","_npmUser":{"name":"steelbrain","email":"de.steelbrain@gmail.com"},"dist":{"shasum":"3af6f1fa9ffc833f14de86916eefc1f559b1b051","tarball":"https://registry.npmjs.org/sb-promisify/-/sb-promisify-1.3.0.tgz"},"maintainers":[{"name":"steelbrain","email":"de.steelbrain@gmail.com"}],"_npmOperationalInternal":{"host":"packages-16-east.internal.npmjs.com","tmp":"tmp/sb-promisify-1.3.0.tgz_1459313184565_0.3948246203362942"},"directories":{}}},"readme":"# Promisify\nA node module to help you convert callback-style functions to promises\n\n## Installation\n\n```js\nnpm install --save sb-promisify\n```\n\n## API\n\n```js\nexport function promisifyAll(object, throwError = true)\nexport default function promisify(callback, throwError = true)\n```\n\n## Example Usage\n\nHere's the default behavior\n\n```js\n'use babel'\n\nimport promisify from 'sb-promisify'\nimport fs from 'fs'\n\nconst readFile = promisify(fs.readFile)\n\nreadFile('/etc/passwd').then(function(contents) {\n  console.log(contents.toString('utf8'))\n}, function() {\n  console.error('Unable to read file')\n})\n```\n\nBut if you set throwError to false, here's how it would react\n\n```js\n'use babel'\n\nimport promisify from 'sb-promisify'\nimport fs from 'fs'\n\nconst readFile = promisify(fs.readFile, false)\n\nreadFile('/etc/passwd').then(function(contents) {\n  if (contents === null) {\n    console.error('Unable to read file')\n  } else {\n    console.log(contents.toString('utf8'))\n  }\n})\n```\n\n## License\nThis module is licensed under the terms of MIT License. Check the LICENSE file for more info.\n","maintainers":[{"name":"steelbrain","email":"de.steelbrain@gmail.com"}],"time":{"modified":"2016-03-30T04:46:25.582Z","created":"2016-02-01T16:15:32.067Z","1.0.0":"2016-02-01T16:15:32.067Z","1.1.0":"2016-02-08T14:56:15.198Z","1.1.1":"2016-02-11T11:59:57.842Z","1.2.0":"2016-03-26T13:44:55.783Z","1.3.0":"2016-03-30T04:46:25.582Z"},"homepage":"https://github.com/steelbrain/promisify#readme","keywords":["promisify","es6","promise"],"repository":{"type":"git","url":"git+https://github.com/steelbrain/promisify.git"},"author":{"name":"steelbrain"},"bugs":{"url":"https://github.com/steelbrain/promisify/issues"},"license":"MIT","readmeFilename":"README.md","_attachments":{},"_etag":"\"EYPGKYALSVY25XPLTQSD5C2TI\""}