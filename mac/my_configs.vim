" store in ~/.vim_runtime
" https://github.com/amix/vimrc
set background=dark
let g:solarized_termtrans = 1
" colorscheme solarized
" colorscheme pyte
set relativenumber
set gcr=a:blinkon0
set guifont=Hack:h15

" shortcut for common alignment characters
let mapleader=','
nmap <Leader>a= :Tab /=<CR>
vmap <Leader>a= :Tab /=<CR>
nmap <Leader>a: :Tab /:<CR>
vmap <Leader>a: :Tab /:<CR>
